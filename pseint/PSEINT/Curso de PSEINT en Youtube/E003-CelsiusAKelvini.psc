//  Convertir una temperatura dada en grados Celsius en grados Kelvin.
Algoritmo Ejercicio003
	Definir celsius Como Real;   // datos en Celsius
	celsius = 0;
	Escribir "CONVERSOR DE CELSIUS A KELVIN";
	Escribir "ESCRIBA EL VALOR DE LA TEMPERATURA EN CELSIUS";
	Leer celsius;
	Escribir "EL RESULTADO ES: ", celsius + 273.15, " K";
FinAlgoritmo
